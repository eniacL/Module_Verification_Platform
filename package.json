{
	"name": "mvp",
	"displayName": "Module Verification Platform",
	"description": "Supporting for vscode-work-flow of ICer",
	"version": "0.5.4",
	"publisher": "LSF",
	"license": "MIT",
	"author": {
		"name": "LSF",
		"url": "https://github.com/eniacL"
	},
	"icon": "md_src/logo/mvp_logo.png",
	"bugs": {
		"url": "https://github.com/eniacL/Module_Verification_Platform/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/eniacL/Module_Verification_Platform"
	},
	"homepage": "https://github.com/eniacL",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"systemverilog",
		"verilog",
		"outline",
		"class view",
		"MVP",
		"mvp"
	],	
	"activationEvents": [
		"onLanguage:systemverilog",
		"onView:MVP",
		"onCommand:mvp.showCodeExplorer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "mvp.showCodeExplorer",
				"title": "Show Code Explorer",
				"category": "SystemVerilog Code Explorer",
				"when": "editorTextFocus && editorLangId == systemverilog"
			}
		],
		"keybindings": [
			{
				"command": "mvp.showCodeExplorer",
				"key": "ctrl+shift+alt+e",
				"mac": "cmd+alt+k",
				"when": "editorTextFocus && editorLangId == systemverilog"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "MVP",
					"title": "MVP",
					"icon": "resources/images/logo/mvp_logo_v1.3.svg"
				}
			]
		},
		"views": {
			"MVP": [
				{
					"id": "mvp.codeExplorer",
					"name": "outline"
				}
			]
		},
		"languages": [
			{
				"id": "systemverilog",
				"aliases": [
					"SystemVerilog",
					"SV",
					"sv"
				],
				"extensions": [
					".sv",
					".sva",
					".svi",
					".svh",
					".v",
					".vh"
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.50.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "15.0.2",
		"eslint": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.2.4",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"typescript": "4.2.4"
	}
}
